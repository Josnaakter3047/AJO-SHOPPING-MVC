
@model MvcECommerceWebSite.Models.ViewModel.RegisterView


@{
    ViewBag.Title = "SignUp";
}
<div class="container" style="margin-top:75px;">
    <div class="row" style="background-color:#6f94b0;">
        <h2 class="text-center mt-5 mb-3 text-light">Registration Form</h2>
        <div class="col offset-2">
            <div class="col-md-12">
                @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row mb-2">
                        @Html.LabelFor(x => x.UserName, new { @class = "col-form-label col-2 r text-light" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control r" })
                        </div>
                        <div class="col-md-4">
                            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-2 r text-light" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control r" })
                        </div>
                        <div class="col-md-4">
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        @Html.LabelFor(x => x.PhoneNumber, new { @class = "col-form-label col-2 r text-light" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control r" })
                        </div>
                        <div class="col-md-4">
                            @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger " })
                        </div>
                    </div>

                    <div class="row mb-2">
                        @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-2 r text-light" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control r", placeholder = "enter your password", type = "password" })
                        </div>
                        <div class="col-md-4">
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-form-label col-2 r text-light" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control r", placeholder = "Re-type your password", type = "password" })
                        </div>
                        <div class="col-md-4">
                            @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-6 offset-3 mb-2">
                            <button type="submit" class="btn btn-success" style="width:300px;font-size:25px;">Register</button>
                            
                        </div>
                        <div class="col-md-8 offset-4 mb-3">
                            <a href="@Url.Action("LogIn","Account")">Log In here</a>
                        </div>
                    </div>
                }
            </div>
            
        </div>
    </div>
</div>


