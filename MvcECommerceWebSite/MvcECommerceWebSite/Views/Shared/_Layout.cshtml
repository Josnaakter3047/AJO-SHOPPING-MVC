<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>AJO-SHOPPING</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href="~/Content/fontawesome/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        body {
            font-family: 'Palatino Linotype';
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-md bg-dark fixed-top">
        <div class="container-fluid">

            <img src="~/Images/Logo.png" width="40" height="40" class="me-1 navbar-brand" />
            @Html.ActionLink("AJO.SHOPPING", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menubar" aria-controls="menubar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="menubar">
                <ul class="nav navbar-nav">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">

                        @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>

                </ul>

                <ul class="nav navbar-nav ms-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Hello " + User.Identity.Name + " !", "Index", "Account", new { area = "" }, new { @class = "nav-link active" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Log Out", "LotOut", "Account", new { area = "" }, new { @class = "nav-link active" })
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Sign Up", "SignUp", "Account", new { area = "" }, new { @class = "nav-link active" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Log In", "LogIn", "Account", new { area = "" }, new { @class = "nav-link active" })
                        </li>
                    }
                    @if (User.Identity.Name == "Admin")
                    {

                        <li class="nav-item">
                            @Html.ActionLink("Management", "Index", "Products", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Report", "ProductsReport", "Report", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }


                </ul>
                @Html.Partial("_ShoppingCart")
            </div>
            
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <!--Footer begin-->
    <footer class="container bd-footer py-3 bg-light mt-lg-5">
        <div class="container py-2">
            <div class="row">
                <div class="col-lg-3 mb-3">
                    <a class="d-inline-flex align-items-center mb-2 link-dark text-decoration-none" href="/">
                        <span class="fs-5">AJO.SHOPPING</span>
                    </a>
                    <ul class="list-unstyled small text-muted">
                        <li class="mb-2">Designed and built with all the love in the world by the <a href="/">Website team</a> with the help of <a href="/">Our contributors</a>.</li>
                        <li class="mb-2">Code licensed <a href="/" target="_blank" rel="license noopener">MIT</a>, docs <a href="/" target="_blank" rel="license noopener">CC BY 3.0</a>.</li>
                        <li class="mb-2">CEO: Josna Akter Allo</li>
                        <li class="mb-2">Gmail: josnaallo94@gmail.com</li>
                        <li class="mb-2">Analytics by <a href="/" target="_blank" rel="noopener">ajoshopping.com</a>.</li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2 offset-lg-1 mb-3">
                    <h5>Project Content</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/">Home</a></li>
                        <li class="mb-2"><a href="/">About</a></li>
                        <li class="mb-2"><a href="/">Contact Us</a></li>
                        <li class="mb-2"><a href="/">Products</a></li>
                        <li class="mb-2"><a href="/">Categories</a></li>
                        <li class="mb-2"><a href="/">Lot Sizes</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2 mb-3">
                    <h5>Delivery System</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/">Cash On Delivery</a></li>
                        <li class="mb-2"><a href="/">Free On Delivery</a></li>
                        <li class="mb-2"><a href="/">Credit Card</a></li>
                        <li class="mb-2"><a href="/">Debit Card</a></li>
                        <li class="mb-2"><a href="/">Rocket</a></li>
                        <li class="mb-2"><a href="/">Bkash</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2 mb-3">
                    <h5>Product Varities</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/">Men Collection</a></li>
                        <li class="mb-2"><a href="/">Women Collection</a></li>
                        <li class="mb-2"><a href="/">Kids Collection</a></li>
                        <li class="mb-2"><a href="/">Electronics</a></li>
                        <li class="mb-2"><a href="/">Winter Collection</a></li>
                        <li class="mb-2"><a href="/">Accessories</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2 mb-3">
                    <h5>Community</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/">Issues</a></li>
                        <li class="mb-2"><a href="/">Discussions</a></li>
                        <li class="mb-2"><a href="/">Corporate sponsors</a></li>
                        <li class="mb-2"><a href="/">Open Collective</a></li>
                        <li class="mb-2"><a href="/">Slack</a></li>
                        <li class="mb-2"><a href="/">Stack Overflow</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <p class="text-center bg-light">
            &copy;all rights reserve to ajo.shopping<br />
            &copy;@DateTime.Now.Year - www.mvc-ecommercewebsite
        </p>
    </footer>
    <!--Footer End-->

    @RenderSection("scripts", false)
    <script src="~/Scripts/myArrow.js"></script>

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>

</body>
</html>